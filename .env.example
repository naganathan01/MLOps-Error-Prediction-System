# MLOps Error Prediction Environment Variables

# Database Configuration
DATABASE_URL=sqlite:///./data/mlops_error_prediction.db
DATABASE_ENGINE=sqlite

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Model Configuration
MODEL_DIR=models
DATA_DIR=data
LOGS_DIR=logs

# MLflow Configuration
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=error_prediction

# Monitoring Configuration
ENABLE_MONITORING=true
MONITORING_INTERVAL=300  # seconds

# Feature Engineering
ROLLING_WINDOWS=5,15,30
LAG_PERIODS=1,2,3,5

# Training Configuration
TEST_SIZE=0.2
RANDOM_STATE=42
CV_FOLDS=3

# Alerting (Optional)
ALERT_EMAIL=admin@company.com
SLACK_WEBHOOK_URL=

# Security
SECRET_KEY=your-secret-key-here
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s